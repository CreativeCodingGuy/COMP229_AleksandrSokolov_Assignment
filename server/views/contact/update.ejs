<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- content for the update page -->
<div class="container">
    <div class="row" style="color: whitesmoke;">
        <div class="offset-md-2 col-md-8" style="background-image: url('/Assets/images/forest.jpg');margin-top: 3em;">

            <h1><%= title %></h1>

            <form class="form" method="post">

                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Contact's Name"
                        name="name" 
                        value = "<%= contact.name %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">E-mail</label>
                    <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder="Enter the Contact's E-mail"
                        name="email" 
                        value = "<%= contact.email %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="text" class="form-control"
                        id="numberTextField"
                        placeholder="Enter the Contact's Phone Number"
                        name="number" 
                        value = "<%= contact.number %>"
                        required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Update
                </button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>

                <a href="/contact-list/delete/<%= contact.id %>" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
            </form>
        </div>

    </div>

</div>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>